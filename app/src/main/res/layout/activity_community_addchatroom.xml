<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/titlebackground">

        <EditText
            android:id="@+id/community_et_roomname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:hint="채팅방 이름" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_community_add_location_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/performTab"
            android:src="@drawable/ic_location_on_white_48dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/chat_room"
                android:gravity="center"
                android:text="모임장소" />

            <TextView
                android:id="@+id/tv_community_add_location"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/performTab" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_community_add_day_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/performTab"
            android:src="@drawable/ic_today_white_48dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/chat_room"
                android:gravity="center"
                android:text="날짜선택" />

            <TextView
                android:id="@+id/tv_community_add_day"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/performTab" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_community_add_time_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/performTab"
            android:src="@drawable/ic_av_timer_white_48dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/chat_room"
                android:gravity="center"
                android:text="시간선택" />

            <TextView
                android:id="@+id/tv_community_add_time"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/performTab" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_community_add_performance_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/performTab"
            android:src="@drawable/add_performance" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/chat_room"
                android:gravity="center"
                android:text="공연선택" />

            <TextView
                android:id="@+id/tv_community_add_performance"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/performTab" />
        </LinearLayout>
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/community_btn_chatroomcreate"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_check_white_48dp"
        app:civ_fill_color="@color/chat_room" />

</LinearLayout>